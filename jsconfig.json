{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": "./src",
        "jsx": "react",
        "paths": {
            "@store/*": [
                "./store/*"
            ],
            "@containers/*": [
                "./containers/*"
            ],
            "@shared/*": [
                "./shared/*"
            ],
            "@svg/*": [
                "./shared/svg/*"
            ],
            "@infrastructure/*": [
                "./infrastructure/*"
            ],
            "@moduleUtils/*": [
                "../online-booking-client-core/src/utils/*"
            ],
            "@moduleI18n/*": [
                "../online-booking-client-core/src/i18n/*"
            ],
            "@moduleHocs/*": [
                "../online-booking-client-core/src/hocs/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "build"
    ]
}